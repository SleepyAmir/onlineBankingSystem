<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>Online Banking System</display-name>
    <description>A secure online banking platform with user authentication, transactions, and loan management.</description>

    <!-- ======================================== -->
    <!-- 1. Session Configuration -->
    <!-- ======================================== -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>false</http-only>
            <!-- IMPORTANT: Set to false for development, true for production with HTTPS -->
            <secure>false</secure>
            <max-age>1800</max-age>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- ======================================== -->
    <!-- 2. Welcome Files -->
    <!-- ======================================== -->
    <welcome-file-list>
        <welcome-file>welcome</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- ======================================== -->
    <!-- 3. CSRF Filter (ONLY for Web UI, NOT for API) -->
    <!-- ======================================== -->
    <filter>
        <filter-name>CsrfFilter</filter-name>
        <filter-class>com.sleepy.onlinebankingsystem.filter.CsrfFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CsrfFilter</filter-name>
        <!-- Apply only to JSP/Servlet paths, NOT /api/* -->
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>/servlet/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <!-- ======================================== -->
    <!-- 4. Authentication Filter -->
    <!-- ======================================== -->
    <!-- This filter is already defined with @WebFilter annotation -->
    <!-- No need to declare it here -->

    <!-- ======================================== -->
    <!-- 5. Error Pages -->
    <!-- ======================================== -->
    <error-page>
        <error-code>404</error-code>
        <location>/views/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/views/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/views/error.jsp</location>
    </error-page>

    <!-- ======================================== -->
    <!-- 6. Session Listener -->
    <!-- ======================================== -->
    <listener>
        <listener-class>com.sleepy.onlinebankingsystem.utils.SessionListener</listener-class>
    </listener>

    <!-- ======================================== -->
    <!-- 7. NO Security Constraints for API -->
    <!-- ======================================== -->
    <!-- API endpoints are handled by their own authentication mechanism -->
    <!-- Do NOT add security-constraint for /api/* -->

</web-app>